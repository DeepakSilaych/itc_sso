# Django Secret Key
SECRET_KEY=your_very_secret_and_unique_key_here

# Debug Mode (Set to False in production)
DEBUG=True

# Allowed Hosts (Comma-separated for multiple hosts)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_NAME=itc_sso_db
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Email Configuration
# Number of email configurations
EMAIL_CONFIG_COUNT=2

# First Email Configuration
EMAIL_HOST_USER_1=first_email@example.com
EMAIL_HOST_PASSWORD_1=your_app_password_1
EMAIL_HOST_1=smtp.gmail.com
EMAIL_PORT_1=587
EMAIL_USE_TLS_1=True

# Second Email Configuration (Optional)
EMAIL_HOST_USER_2=second_email@example.com
EMAIL_HOST_PASSWORD_2=your_app_password_2
EMAIL_HOST_2=smtp.outlook.com
EMAIL_PORT_2=587
EMAIL_USE_TLS_2=True

# CORS and Security Settings
CORS_ORIGIN_ALLOW_ALL=True
CSRF_TRUSTED_ORIGINS=https://yourdomain.com

# Optional: Host URL for email links
HOST_URL=https://yourdomain.com

# Logging Level
LOGGING_LEVEL=INFO

# MinIO Storage Configuration
MINIO_STORAGE_ENDPOINT=minio.example.com  # Just the hostname, no protocol or port
MINIO_STORAGE_ACCESS_KEY=your_access_key
MINIO_STORAGE_SECRET_KEY=your_secret_key
MINIO_STORAGE_USE_HTTPS=True
MINIO_STORAGE_PORT=443  # Optional: Custom port if needed

# MinIO Bucket Names
MINIO_STORAGE_MEDIA_BUCKET_NAME=local-media
MINIO_STORAGE_STATIC_BUCKET_NAME=local-static

# Optional: Additional Django settings can be added here